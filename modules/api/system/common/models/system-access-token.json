{
  "name": "SystemAccessToken",
  "description": "Token based authentication and access control.",
  "plural": "accessTokens",
  "base": "AccessToken",
  "strict": true,
  "validateUpsert": true,
  "allowEternalTTL": true,
  "properties": {
    "id": {
      "type": "String",
      "id": true,
      "defaultFn": "uuidv4"
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "idName": "id",
      "polymorphic": {
        "idType": "string",
        "foreignKey": "userId",
        "discriminator": "principalType"
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "system-admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
